{% assign product = all_products[section.settings.product] %}
{% if product.empty? %}
  {% assign section_onboarding = true %}
{% endif %}

{% assign title_in_details = true %}
{%- capture product_title -%}
  {%- unless section_onboarding -%}
    <h2 class="product-title">
      <a href="{{ product.url }}">{{ product.title }}</a>
    </h2>
  {%- else -%}
    <h2 class="product-title">
      <a href="#">{{ 'onboarding.featured_product.title' | t }}</a>
    </h2>
  {%- endunless -%}
{%- endcapture -%}

<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-featured-product"
  data-section-data
>
  {
    "settings": {
      "gallery_enable_video_autoplay": {{ section.settings.gallery_enable_video_autoplay | json }},
      "gallery_enable_video_looping": {{ section.settings.gallery_enable_video_looping | json }},
      "gallery_enable_zoom": {{ section.settings.enable_zoom | json }}
    }
  }
</script>

<section
  class="module-container {{ section.settings.style }}"
>
  {%
    include 'product-json',
    id: product.id,
    add_to_cart_text: add_to_cart_text,
    enable_history: true
  %}

  <div class="module-inner home-order-now">

    {% if section.settings.title != blank %}
      <h1 class="section-title">{{ section.settings.title | escape }}</h1>
    {% endif %}

    {% assign selected_variant = product.selected_or_first_available_variant %}
    {% assign selected_media = selected_variant.featured_media | default: product.featured_media %}

    {% include
      'product-details',
      is_home: true,
      product_title: product_title,
      title_in_details: title_in_details %}

    {%
      include 'product-gallery',
      product: product,
      selected_media: selected_media,
      enable_image_zoom: section.settings.enable_zoom,
    %}

    <div class="product-wrap">
      {%
        include 'product-form',
        hide_shoppad: true,
        form_id: section.id
      %}

      {% if section.settings.description != blank or product.description != blank %}
        <div class="product-description rte">
          {% include 'variant-description' %}
          {% if section.settings.description == blank %}
            {{ product.description }}
          {% else %}
            {{ section.settings.description }}
          {% endif %}
        </div>
      {% endif %}

      {% include 'product-additional-information' %}

    </div>

    {%
      include 'product-json',
      id: section.id,
      add_to_cart_text: add_to_cart_text,
      enable_history: false
    %}
  </div>
</section>

