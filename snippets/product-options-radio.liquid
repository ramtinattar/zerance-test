{% unless product.options.size == 1 and product.variants[0].title == 'Default Title' %}
  {% for option in product.options_with_values %}
    {% assign option_index = forloop.index0 %}

    <div class="inline-field-wrapper js-required">
      <span class="input-field-title">{{ option.name }}:</span>

      {% for value in option.values %}
        {%- capture option_id -%}
          single-option-{{ form_id }}-{{ option_index }}-{{ forloop.index0 }}
        {%- endcapture -%}
        <label
          class="input-checkbox-wrapper"
          for="{{ option_id }}">

          <input
            class="input-checkbox"
            data-input-swatch
            type="radio"
            value="{{ value | escape }}"
            {% if option.selected_value == value %}checked{% endif %}
            name="option-{{ option_index }}"
            id="{{ option_id }}"
            data-option-index="{{ option_index }}"
            data-option-input="{{ form_id }}">

          {% for block in section.blocks %}
            {% if block.type == "swatch" %}
              {% if block.settings.title == value %}
                <img class="swatch-image" src="{{ block.settings.image | img_url : 'master' }}" alt="{{ block.settings.image.alt }}">
              {% endif %}
            {% endif %}
          {% endfor %}

          <span class="input-checkbox-title">{{ value }}</span>

        </label>
      {% endfor %}
    </div>
  {% endfor %}
{% endunless %}


